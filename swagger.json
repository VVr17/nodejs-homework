{
  "definition": {
    "openapi": "3.1.0",
    "swagger": "2.0",
    "info": {
      "title": "Phonebook Express API with Swagger",
      "version": "0.1.0",
      "description": "This is a simple CRUD API application made with Express and documented with Swagger",
      "license": {
        "name": "MIT",
        "url": "https://spdx.org/licenses/MIT.html"
      }
    },
    "servers": [
      {
        "url": "https://phonebook-node.up.railway.app"
      }
    ],
    "tags": [
      {
        "name": "Users",
        "description": "API for users in the system"
      },
      {
        "name": "Contacts",
        "description": "API for contacts in the system"
      }
    ],

    "securityDefinitions": {
      "Bearer": {
        "type": "apiKey",
        "name": "Authorization",
        "in": "header"
      }
    },

    "paths": {
      "/api/users/signup": {
        "post": {
          "tags": ["Users"],
          "summary": "Add new user in system",
          "produces": ["application/json"],
          "parameters": [
            {
              "in": "body",
              "name": "new user",
              "description": "user information",
              "required": true,
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "example@example.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "password"
                  }
                }
              }
            }
          ],
          "responses": {
            "201": {
              "description": "User added successfully",
              "schema": {
                "$ref": "#/definitions/User"
              }
            },
            "400": {
              "description": "Bad request"
            },
            "409": {
              "description": "Email already exist"
            },
            "500": {
              "description": "Internal server error"
            }
          }
        }
      },
      "/api/users/verify": {
        "post": {
          "tags": ["Users"],
          "summary": "resend email confirmation",
          "produces": ["application/json"],
          "parameters": [
            {
              "name": "email",
              "in": "body",
              "example": "example@example.com",
              "required": true,
              "description": "Email to send verification"
            }
          ],
          "responses": {
            "200": {
              "description": "Verification email has been sent",
              "schema": {
                "$ref": "#/definitions/SuccessResponse"
              }
            }
          }
        }
      },
      "/api/users/verify/{verificationToken}": {
        "get": {
          "tags": ["Users"],
          "summary": "verify user email",
          "parameters": [
            {
              "name": "verification token",
              "in": "path",
              "required": true,
              "description": "Verification token to verify email",
              "type": "string"
            }
          ],
          "produces": ["application/json"],
          "responses": {
            "200": {
              "description": "Email verification is successful",
              "schema": {
                "$ref": "#/definitions/SuccessResponse"
              }
            }
          }
        }
      },
      "/api/users/login": {
        "post": {
          "tags": ["Users"],
          "summary": "Login user",
          "produces": ["application/json"],
          "parameters": [
            {
              "in": "body",
              "name": "user",
              "description": "user information",
              "required": true,
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "example@example.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "password"
                  }
                }
              }
            }
          ],
          "responses": {
            "200": {
              "description": "User has been logged in successfully",
              "schema": {
                "$ref": "#/definitions/UserWithJWT"
              }
            },
            "400": {
              "description": "Bad request"
            },
            "500": {
              "description": "Internal server error"
            }
          }
        }
      },
      "/api/users/logout": {
        "get": {
          "tags": ["Users"],
          "summary": "Logout user",
          "security": [
            {
              "Bearer": []
            }
          ],
          "parameters": [
            {
              "in": "header",
              "name": "Authorization",
              "description": "Authorization token",
              "required": true,
              "type": "string"
            }
          ],
          "produces": ["application/json"],
          "responses": {
            "204": {
              "description": "User has been logged out",
              "schema": {
                "$ref": "#/definitions/SuccessResponse"
              }
            },
            "401": {
              "description": "Unauthorized"
            },
            "500": {
              "description": "Internal server error"
            }
          }
        }
      },
      "/api/users/current": {
        "get": {
          "tags": ["Users"],
          "summary": "Get current user",
          "produces": ["application/json"],
          "security": [
            {
              "Bearer": []
            }
          ],
          "parameters": [
            {
              "in": "header",
              "name": "Authorization",
              "description": "Authorization token",
              "required": true,
              "type": "string"
            }
          ],
          "responses": {
            "200": {
              "description": "User has been found",
              "schema": {
                "$ref": "#/definitions/User"
              }
            },
            "401": {
              "description": "Unauthorized"
            },
            "500": {
              "description": "Internal server error"
            }
          }
        }
      },
      "/api/users/": {
        "patch": {
          "tags": ["Users"],
          "summary": "Update user subscription",
          "security": [
            {
              "Bearer": []
            }
          ],
          "parameters": [
            {
              "in": "header",
              "name": "Authorization",
              "description": "Authorization token",
              "required": true,
              "type": "string"
            },
            {
              "in": "body",
              "name": "subscription",
              "description": "user subscription ['starter', 'pro', 'business']",
              "required": true,
              "schema": {
                "type": "object",
                "properties": {
                  "subscription": {
                    "type": "string",
                    "example": "business"
                  }
                }
              }
            }
          ],
          "produces": ["application/json"],
          "responses": {
            "200": {
              "description": "User subscription has been updated",
              "schema": {
                "$ref": "#/definitions/User"
              }
            },
            "401": {
              "description": "Unauthorized"
            },
            "500": {
              "description": "Internal server error"
            }
          }
        }
      },
      "/api/users/avatars": {
        "patch": {
          "tags": ["Users"],
          "summary": "Update user's avatar",
          "security": [
            {
              "Bearer": []
            }
          ],
          "parameters": [
            {
              "in": "header",
              "name": "Authorization",
              "description": "Authorization token",
              "required": true,
              "type": "string"
            },
            {
              "in": "body",
              "name": "avatar",
              "description": "user avatar",
              "required": true,
              "schema": {
                "type": "object",
                "properties": {
                  "avatar": {
                    "type": "file",
                    "example": "file.png"
                  }
                }
              }
            }
          ],
          "produces": ["application/json"],
          "responses": {
            "200": {
              "description": "User avatar has been updated",
              "schema": {
                "$ref": "#/definitions/User"
              }
            },
            "401": {
              "description": "Unauthorized"
            },
            "500": {
              "description": "Internal server error"
            }
          }
        }
      },
      "/api/contacts": {
        "get": {
          "tags": ["Contacts"],
          "summary": "Get all user contacts",
          "security": [
            {
              "Bearer": []
            }
          ],
          "parameters": [
            {
              "in": "header",
              "name": "Authorization",
              "description": "Authorization token",
              "required": true,
              "type": "string"
            }
          ],
          "responses": {
            "200": {
              "description": "user contacts received",
              "schema": {
                "$ref": "#/definitions/Contacts"
              }
            },
            "401": {
              "description": "Unauthorized"
            },
            "500": {
              "description": "Internal server error"
            }
          }
        },
        "post": {
          "tags": ["Contacts"],
          "summary": "Add new contact",
          "security": [
            {
              "Bearer": []
            }
          ],
          "parameters": [
            {
              "in": "header",
              "name": "Authorization",
              "description": "Authorization token",
              "required": true,
              "type": "string"
            },
            {
              "in": "body",
              "name": "new contact",
              "description": "contact information",
              "required": true,
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "name"
                  },
                  "phone": {
                    "type": "string",
                    "example": "(123)-4-345-345"
                  },
                  "email": {
                    "type": "string",
                    "example": "example@example.com"
                  },
                  "favorite": {
                    "type": "boolean",
                    "example": "true"
                  }
                }
              }
            }
          ],
          "responses": {
            "201": {
              "description": "Contact added successfully",
              "schema": {
                "$ref": "#/definitions/Contact"
              }
            },
            "400": {
              "description": "Bad request"
            },
            "401": {
              "description": "Unauthorized"
            },
            "500": {
              "description": "Internal server error"
            }
          }
        }
      },
      "/api/contacts/{id}": {
        "parameters": [
          {
            "in": "header",
            "name": "Authorization",
            "description": "Authorization token",
            "required": true,
            "type": "string"
          },
          {
            "name": "contact id",
            "in": "path",
            "required": true,
            "description": "ID of contact that we want to find",
            "type": "string"
          }
        ],
        "get": {
          "tags": ["Contacts"],
          "summary": "Get contact by Id",
          "security": [
            {
              "Bearer": []
            }
          ],
          "responses": {
            "200": {
              "description": "contact with Id",
              "schema": {
                "$ref": "#/definitions/Contact"
              }
            },
            "400": {
              "description": "Bad request"
            },
            "401": {
              "description": "Unauthorized"
            },
            "500": {
              "description": "Internal server error"
            }
          }
        },
        "put": {
          "tags": ["Contacts"],
          "summary": "Update contact with given Id",
          "produces": ["application/json"],
          "security": [
            {
              "Bearer": []
            }
          ],
          "parameters": [
            {
              "in": "header",
              "name": "Authorization",
              "description": "Authorization token",
              "required": true,
              "type": "string"
            },
            {
              "in": "body",
              "name": "new contact",
              "description": "contact information",
              "required": true,
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "name"
                  },
                  "phone": {
                    "type": "string",
                    "example": "(123)-4-345-345"
                  },
                  "email": {
                    "type": "string",
                    "example": "example@example.com"
                  },
                  "favorite": {
                    "type": "boolean",
                    "example": "true"
                  }
                }
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Contact added successfully",
              "schema": {
                "$ref": "#/definitions/Contact"
              }
            },
            "400": {
              "description": "Bad request"
            },
            "401": {
              "description": "Unauthorized"
            },
            "500": {
              "description": "Internal server error"
            }
          }
        },
        "delete": {
          "tags": ["Contacts"],
          "summary": "Delete contact with given Id",
          "security": [
            {
              "Bearer": []
            }
          ],
          "responses": {
            "200": {
              "description": "contact has been deleted"
            }
          }
        }
      },
      "/api/contacts/{id}/favorite": {
        "parameters": [
          {
            "name": "contact id",
            "in": "path",
            "required": true,
            "description": "ID of contact that we want to find",
            "type": "string"
          },
          {
            "in": "body",
            "name": "new contact",
            "description": "contact information",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "favorite": {
                  "type": "boolean",
                  "example": "true"
                }
              }
            }
          }
        ],
        "patch": {
          "tags": ["Contacts"],
          "summary": "Update favorite status",
          "produces": ["application/json"],
          "security": [
            {
              "Bearer": []
            }
          ],
          "responses": {
            "200": {
              "description": "Contact favorite status has been updated",
              "schema": {
                "$ref": "#/definitions/Contact"
              }
            },
            "400": {
              "description": "Bad request"
            },
            "401": {
              "description": "Unauthorized"
            },
            "500": {
              "description": "Internal server error"
            }
          }
        }
      }
    },

    "definitions": {
      "User": {
        "required": ["email", "password"],
        "properties": {
          "_id": {
            "type": "string",
            "uniqueItems": true
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "subscription": {
            "type": "string"
          },
          "avatar": {
            "type": "string"
          }
        }
      },
      "UserWithJWT": {
        "required": ["email", "password"],
        "properties": {
          "token": {
            "type": "string"
          },
          "user": {
            "type": "object",
            "$ref": "#/definitions/User"
          }
        }
      },
      "Users": {
        "type": "array",
        "$ref": "#/definitions/User"
      },
      "Contact": {
        "required": ["name", "email", "phone"],
        "properties": {
          "_id": {
            "type": "string",
            "uniqueItems": true
          },
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "phone": {
            "type": "string"
          },
          "favorite": {
            "type": "boolean"
          }
        }
      },
      "Contacts": {
        "type": "array",
        "$ref": "#/definitions/Contact"
      },
      "SuccessResponse": {
        "required": ["message"],
        "properties": {
          "message": {
            "type": "string",
            "uniqueItems": true
          }
        }
      }
    }
  },
  "apis": ["./routes/api/*.js"]
}
